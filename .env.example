# Career Buddy Environment Variables
# Copy this file to .env.local and update the values

# =============================================================================
# AUTHENTICATION
# =============================================================================

# NextAuth.js Configuration
NEXTAUTH_SECRET=your-nextauth-secret-here
NEXTAUTH_URL=http://localhost:3000

# Google OAuth (Required for authentication)
GOOGLE_CLIENT_ID=your-google-client-id-here
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# =============================================================================
# DATABASE
# =============================================================================

# PostgreSQL Database URL (for Prisma)
DATABASE_URL="postgresql://career_buddy:dev_password@localhost:5432/career_buddy_dev"

# =============================================================================
# AI SERVICES
# =============================================================================

# OpenAI API (Required for resume analysis and AI features)
OPENAI_API_KEY=your-openai-api-key-here

# =============================================================================
# FILE UPLOAD
# =============================================================================

# File upload configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=pdf,doc,docx

# =============================================================================
# APPLICATION
# =============================================================================

# Application environment
NODE_ENV=development

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# Email service (optional - for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASS=your-app-password

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=your-ga-id

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================

# Enable debug logging
DEBUG=false

# =============================================================================
# PRODUCTION ONLY (uncomment when deploying)
# =============================================================================

# Production database URL (replace with your production database)
# DATABASE_URL="postgresql://username:password@host:port/database"

# Production NextAuth URL
# NEXTAUTH_URL=https://your-domain.com

# =============================================================================
# NOTES
# =============================================================================

# 1. Generate NEXTAUTH_SECRET using: openssl rand -base64 32
# 2. Get Google OAuth credentials from: https://console.cloud.google.com/
# 3. Get OpenAI API key from: https://platform.openai.com/api-keys
# 4. Update DATABASE_URL with your actual database credentials
# 5. For production, use environment-specific values
